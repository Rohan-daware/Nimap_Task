@model IEnumerable<Nimap_Task.Models.Category>

<h2>Category List</h2>
<table>
    <thead>
        <tr>
            <th>Category ID</th>
            <th>Category Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.CategoryId</td>
                <td>@category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Category", new { id = category.CategoryId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Category", new { id = category.CategoryId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
