@model IEnumerable<Nimap_Task.Models.Category>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Categories</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Categories</h2>

        <table class="table table-striped table-bordered">
            <thead class="table-dark">
                <tr>
                    <th class="text-center">Category Name</th>
                    <th class="text-center">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var category in Model)
                {
                    <tr>
                        <td class="text-center">@category.CategoryName</td>
                        <td class="text-center">
                            <a asp-action="Edit" asp-route-id="@category.CategoryId" class="btn btn-warning btn-sm mx-1">Edit</a>
                            <a asp-action="Delete" asp-route-id="@category.CategoryId" class="btn btn-danger btn-sm mx-1">Delete</a>
                            <a asp-action="AddProduct" asp-route-categoryId="@category.CategoryId" class="btn btn-primary btn-sm mx-1">Add Product</a>
                            <a asp-action="DisplayProducts" asp-route-categoryId="@category.CategoryId" class="btn btn-success btn-sm mx-1">View Products</a>
                            


                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-center mt-4">
            <a asp-action="Create" class="btn btn-outline-primary btn-lg">Add New Category</a>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
