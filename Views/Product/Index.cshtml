@model Nimap_Task.ViewModels.ProductListViewModel  // Use the correct namespace

<h2>Product List</h2>
<table>
    <thead>
        <tr>
            <th>Product ID</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.ProductId</td>
                <td>@product.ProductName</td>
                <td>@product.Category.CategoryName</td>
                <td>
                    <a href="@Url.Action("Edit", "Product", new { id = product.ProductId })">Edit</a> |
                    <a href="@Url.Action("Delete", "Product", new { id = product.ProductId })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div>
    @for (int i = 1; i <= Model.TotalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })">@i</a>
    }
</div>

<a href="@Url.Action("Create", "Product")">Add New Product</a>
